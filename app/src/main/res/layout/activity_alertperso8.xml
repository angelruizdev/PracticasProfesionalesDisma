<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/resultado"
    tools:context="com.example.angelruiz.disma.alertperso7">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnMenu2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/bien2"
            tools:ignore="ButtonStyle"/>

        <Button
            android:id="@+id/btnContinuar2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="390dp"
            android:layout_marginStart="390dp"
            android:background="@drawable/revi"
            tools:ignore="ButtonStyle"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="115dp"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/tvAciertos2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="70sp"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>